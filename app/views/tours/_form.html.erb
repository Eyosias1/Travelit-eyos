<%= simple_form_for(flat) do |f| %>
  <%# <%= f.error_notification %>
  <%# <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name, label: 'Nom de l\'appartement' %>
  <%= f.input :address,
      label: "Adresse",
      input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
      wrapper_html: {data: {controller: "address-autocomplete",
      address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= f.input :description %>
  <%= f.input :price_per_night, label: 'Prix du tour' %>
  <%= f.input :number_of_guests, label: 'Nombre de voyageurs maximum' %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.input :hobby_ids, as: :select, collection: Hobby.all, label: 'Hobbies', input_html: { multiple: true, data: {controller: "tomselect"} }, include_hidden: false %>
  <%= f.submit label, class: "btn btn-primary" %>
<% end %>
